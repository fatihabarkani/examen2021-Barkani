        {% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar primary">
                <div class="navbar-menu ml-auto">
                    <a class="navbar-link" href="{{ path('home')}}">Home</a>
                    <a class="navbar-link" href="{{ path('livres')}}">Livres</a>
                    <a class="navbar-link" href="{{ path('genre')}}">Genre</a>
                    <a class="navbar-link" href="#">Contact</a>
                </div>
            </nav>
        </header>
        {% block body %}{% endblock %}

        <footer>
            <p>Examen 2021 Fatiha Barkani</p>
        </footer>
    </body>
